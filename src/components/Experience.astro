function calculateDate(dateFrom: string) {
    const _dateFrom = new Date(dateFrom);
    const _dateNow = new Date();

    let years = _dateNow.getFullYear() - _dateFrom.getFullYear();
    let months = _dateNow.getMonth() - _dateFrom.getMonth();

    // Validate years and months
    if (months < 0) {
        years --;
        months += 12;
    }

    if (months === 0) return `${years} years`;
    return `${years} years, ${months} month${months > 1 ? 's' : ''}`;
}
